{#
/**
 * @file
 * Default theme implementation for rendering corporate blocks welcome.
 *
 * Available variables:
 *   - none
 *
 * @see template_preprocess_corporate_blocks_welcome()
 *
 * @ingroup themeable
 */
 #}
{% set _url = url('<front>')|render ~ corporate_welcome.welcome.target %}

<div class="cnect-welcome-widget">

    <h1>{{ corporate_welcome.welcome.title | trans }}</h1>

    <div class="cnect-date-widget__body">
        <p class="ecl-paragraph ecl-paragraph--l ecl-u-color-grey-100">
            {{ corporate_welcome.welcome.body }}
        </p>

        <div class="input-group">
            <a href="{{ _url  }}"
               class="ecl-button ecl-button--call ecl-button--caret-right"> {{ corporate_welcome.welcome.call |trans }}</a>
        </div>
    </div>

</div>